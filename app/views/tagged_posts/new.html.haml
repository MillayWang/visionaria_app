%h2 Make New Post

= form_tag :action => 'create', :method => :post do
    = label :post, :content, 'Your Thoughts'
    %br
    = text_area :post, :content
    %br
    
    = label :post, :category, 'Category'
    = select :post, :category, @all_categories

    = label :post, :tag, 'Sustainable UN Goal'
    = select :post, :tag, @all_un_goals
    %br
    = label :post, :public, 'Private'
    = radio_button :post, :public, false
    %br
    = submit_tag 'Submit'