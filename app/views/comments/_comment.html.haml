%div{:class => "comment", :id => "comment_#{comment.id}" }
    %div{:class => "user" }
        %p= link_to "#{comment.username}", profile_path(comment.user_id), :class => "comment_profiles"
    %div{:class => "body"}
        %p= comment.body
    %div{:class => "timestamp" }
        %p= comment.created_at.strftime("%m/%d/%Y at %l:%M%p")
