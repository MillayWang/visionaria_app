%div{:class => "admin_message", :id => "admin_message_#{@viewed_user.id}"}
    = form_for :notification, :url => notifications_path({:id => @viewed_user.id}), :method => :post, :remote => true do |f|
        = f.label :message, "Your message"
        = f.text_area :message
        %br
        = f.submit 'Send'