<div class="login_bg"></div>
  
<h2 class="page_title">Sign up | Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label :username, "Username | Usuario", :class => 'sign_in_label' %><br />
    <%= f.text_field :username %><br />
    <%= f.label :name, "Name | Nombre", :class => 'sign_in_label' %><br />
    <%= f.text_field :name %><br />
    <%= f.label :email, "Email | Correo electrónico", :class => 'sign_in_label' %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, "Password | Contraseña", :class => 'sign_in_label' %>
    <% if @minimum_password_length %>
    <div class="min_chars">
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    </div>
    <% end %><br />
    
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation | Confirmación de contraseña", :class => 'sign_in_label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up | Regístrate", :class => 'sign_in' %>
  </div>
<% end %>
<br />

</div>

